[] > switch-simple-case
  eq. > @
    switch
      *
        *
          FALSE
          "1"
        *
          TRUE
          "2"
    "2"

[] > switch-strings-case
  memory "swordfish" > password
  eq. > @
    switch
      *
        *
          password.eq "swordfish"
          "password is correct!"
        *
          password.eq ""
          "empty password is not allowed"
        *
          FALSE
          "password is wrong"
    "password is correct!"

[] > switch-with-several-true-cases
  eq. > @
    switch
      *
        *
          TRUE
          "TRUE1"
        *
          FALSE
          "FALSE"
        *
          TRUE
          "TRUE2"
    "TRUE1"

[] > switch-with-all-false-cases
  eq. > @
    switch
      *
        *
          FALSE
          "FALSE1"
        *
          FALSE
          "FALSE2"
    TRUE

[] > switch-case-with-error
  try > @
    switch *
    [ex]
      eq. > @
        ex
        "switch cases are empty"
    nop

[] > switch-complex-case
  [] > c1
    FALSE > @
  [] > c2
    "1".eq "2" > @
  [] > c3
    TRUE > @
  eq. > @
    switch
      *
        *
          []
            c1 > @
          22.0
        *
          []
            c2 > @
          0.0
        *
          []
            c3 > @
          []
            "true case" > @
    "true case"
