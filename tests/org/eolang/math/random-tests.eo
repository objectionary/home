+alias org.eolang.hamcrest.assert-that
+alias org.eolang.math.random
+home https://github.com/objectionary/eo-math
+package org.eolang.math
+tests
+version 0.4.1

[] > random-with-seed
  random 51 > r
  assert-that > @
    r.next
    $.not
      $.equal-to (r.next.next)

[] > seeded-randoms-are-equal
  assert-that > @
    (random 1654).next.next.next
    $.equal-to
      (random 1654).next.next.next

[] > random-is-in-range
  random 123 > r
  assert-that > @
    and.
      r.lt 1.0
      not.
        r.lt 0.0
      r.next.lt 1.0
      not.
        r.next.lt 0.0
      r.next.next.lt 1.0
      not.
        r.next.next.lt 0.0
    $.is
      $.equal-to TRUE

[] > two-random-numbers-with-const
  random.pseudo > r!
  nop > @
    assert-that
      r
      $.equal-to r

[] > two-random-numbers-with-phi
  (random 123).@ > r
  assert-that > @
    r
    $.equal-to r

[] > two-random-numbers-with-increment-with-const
  random.pseudo.plus 3.1416 > r!
  nop > @
    assert-that
      r
      $.equal-to r

[] > two-random-numbers-with-increment
  random.pseudo.plus 3.1416 > r
  nop > @
    if.
      QQ.sys.uname.is-windows
      nop
      assert-that
        r
        $.not
          $.equal-to r
