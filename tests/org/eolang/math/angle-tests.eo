+alias org.eolang.hamcrest.assert-that
+alias org.eolang.math.angle
+alias org.eolang.math.number
+home https://github.com/objectionary/eo-math
+package org.eolang.math
+tests
+version 0.4.1

[] > sin-zero
  assert-that > @
    angle 0.0
    .sin
    $.equal-to 0.0

[] > sin-pi-div-2
  assert-that > @
    angle 1.5707963267948966
    .sin
    $.equal-to 1.0

[] > sin-pi-as-int
  assert-that > @
    number
      angle 3.141592653589793
      .sin
    .as-int
    $.equal-to 0

[] > cos-zero
  assert-that > @
    angle 0.0
    .cos
    $.equal-to 1.0

[] > cos-pi-div-2-as-int
  assert-that > @
    number
      angle 1.5707963267948966
      .cos
    .as-int
    $.equal-to 0

[] > cos-pi
  assert-that > @
    angle 3.141592653589793
    .cos
    $.equal-to -1.0

