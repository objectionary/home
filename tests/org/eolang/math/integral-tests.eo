+alias org.eolang.hamcrest.assert-that
+alias org.eolang.math.integral
+alias org.eolang.math.number
+home https://github.com/objectionary/eo-math
+package org.eolang.math
+tests
+version 0.4.1

[] > linear-integral-test
  [x] > lin
    x > @
  nop > @
    assert-that
      integral
        lin
        1
        10
      $.close-to
        49.5
        0.0000001

[] > quadratic-integral-test
  [x] > quadr
    pow. > @
      number x
      2.0
  nop > @
    assert-that
      integral
        quadr
        1
        10
      $.close-to
        333.0
        0.0000001

[] > cube-integral-test
  [x] > cube
    pow. > @
      number x
      3.0
  nop > @
    assert-that
      integral
        cube
        1
        10
      $.close-to
        2499.75
        0.0000001

[] > logarithm-integral-test
  nop > @
    [x] > logarithm
      ln. > @
        number x
    assert-that
      integral
        logarithm
        1
        10
      $.close-to
        14.026
        0.0000001
