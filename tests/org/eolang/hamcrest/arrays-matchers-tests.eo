+alias org.eolang.hamcrest.assert-that
+alias org.eolang.math.number
+home https://github.com/objectionary/eo-hamcrest
+junit
+package org.eolang.hamcrest
+version 0.3.2

[] > has-item-int-test
  assert-that > @
    * 1 2 3
    $.has-item
      $.equal-to 2

[] > has-item-string-test
  assert-that > @
    * "1" "2" "3"
    $.has-item
      $.equal-to "3"

[] > has-item-float-test
  assert-that > @
    * 1.0 44.0
    $.has-item
      $.is
        $.greater-than 10.0

[] > has-items-int-test
  assert-that > @
    * 99 101
    $.has-items
      $.greater-than 100

[] > nested-has-items
  assert-that > @
    * "a" "b" "c" "d"
    $.has-items
      $.equal-to "c"

[] > arrays-each-items
  assert-that > @
    * 1 2
    $.array-each
      $.equal-to 1
      $.equal-to 2

[] > arrays-each-items-complex-case
  assert-that > @
    * "vice" "c" -5 ((number 13).as-float)
    $.array-each
      $.equal-to "vice"
      $.equal-to "c"
      $.less-than 0
      $.greater-than 10.0
