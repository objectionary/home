+alias org.eolang.hamcrest.assert-that
+home https://github.com/objectionary/eo-hamcrest
+junit
+package org.eolang.hamcrest
+version 0.3.0

[] > not-equal-two-sum-test
  assert-that > @
    5.plus 10
    $.not
      $.equal-to 55
    "sum of two numbers"

[] > not-greater-than-two-sum-test
  assert-that > @
    111.plus 89
    $.not
      $.greater-than 201
    "is 111.plus 89 greater than 201"

[] > not-equal-two-strings-test
  assert-that > @
    "i am true"
    $.not
      $.equal-to "i am false"

[] > not-equal-two-floats-div-test
  assert-that > @
    10.55.div 4.7
    $.not
      $.equal-to 18.35

[] > not-greater-than-floats-times-test
  assert-that > @
    101.35.times 2.2
    $.not
      $.greater-than 250.31

[] > not-equal-two-bools-test
  assert-that > @
    FALSE
    $.not
      $.equal-to TRUE
    "two bools"

[] > compare-different-strings
  "abc" > a!
  assert-that > @
    a
    $.is
      $.not
        $.equal-to "abd"

