+package org.eolang.hamcrest
+home https://github.com/objectionary/eo-hamcrest
+version 0.2.7
+alias org.eolang.hamcrest.assert-that
+junit

[] > two-sum-test
  assert-that > @
    4.plus 4
    $.equal-to 8
    "sum of two numbers"

[] > two-strings-test
  assert-that > @
    "vice"
    $.equal-to "vice"
    "two strings"

[] > two-floats-sum-test
  assert-that > @
    4.1.plus 3.9
    $.equal-to 8.0
    "sum of two floats"

[] > two-bools-test
  assert-that > @
    FALSE.not
    $.equal-to TRUE
    "two bools"
