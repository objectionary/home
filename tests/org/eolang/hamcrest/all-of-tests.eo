+alias org.eolang.hamcrest.assert-that
+alias org.eolang.math.number
+home https://github.com/objectionary/eo-hamcrest
+package org.eolang.hamcrest
+tests
+version 0.4.0

[] > all-of-numbers-test
  assert-that > @
    150.minus 50
    $.all-of
      $.equal-to 100
    "all of numbers conditions"

[] > all-of-several
  assert-that > @
    15.times 3
    $.all-of
      $.equal-to 45
      $.greater-than 40
      $.less-than 100
    "all of conditions"

[] > all-of-close-to
  assert-that > @
    22.0
    $.all-of
      $.equal-to
        number 22
        .as-float
      $.greater-than 10.0
      $.close-to 20.0 2.2
    "all of conditions"
