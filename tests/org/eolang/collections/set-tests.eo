+alias org.eolang.collections.list
+alias org.eolang.collections.set
+alias org.eolang.hamcrest.assert-that
+home https://github.com/objectionary/eo-collections
+junit
+package org.eolang.collections
+version 0.0.8

[] > set-works
  assert-that > @
    set
      list
        * 2 2
    @.equal-to
      list
        * 2

[] > set-with-existed-item
  with. > set-with!
    set
      list > target!
        * 1
    1
  assert-that > @
    set-with
    $.equal-to
      target

[] > set-with-not-existed-item
  with. > set-with!
    set
      list
        * 2
    4
  assert-that > @
    set-with
    $.equal-to
      list
        * 2 4

[] > empty-set-works
  assert-that > @
    set
      list > empty-list!
        *
    $.equal-to
      empty-list
