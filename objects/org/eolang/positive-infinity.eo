+architect yegor256@gmail.com
+home https://github.com/objectionary/eo
+package org.eolang
+rt jvm org.eolang:eo-runtime:0.38.1
+version 0.38.1

# Positive infinity.
[] > positive-infinity
  1.0.div 0.0 > @

  # Tests that $ = x.
  [x] > eq
    eq. > @
      ^.as-bytes
      x.as-bytes

  # Tests that $ < x.
  [x] > lt
    false > @

  # Tests that $ ≤ x.
  [x] > lte
    ^.eq x > @

  # Tests that $ > x.
  [x] > gt
    x > value!
    not. > @
      or.
        value.eq nan.as-bytes
        ^.eq value

  # Tests that $ ≥ x.
  [x] > gte
    not. > @
      eq.
        x.as-bytes
        nan.as-bytes

  # Multiplication of $ and x.
  [x] > times
    x > value!

    [num] > is-nan
      num.eq nan.as-bytes > @

    [num] > is-nan-or-zero
      or. > @
        or.
          or.
            is-nan num
            num.eq -0.0
          num.eq 0.0
        num.eq 0

    [num] > is-num-gt-zero
      try > @
        0.lt num
        0.0.lt ^.num > [e] >>
        false
    if. > @
      is-nan-or-zero value
      nan
      if.
        is-num-gt-zero value
        positive-infinity
        negative-infinity

  # Sum of $ and x.
  [x] > plus
    x > value!
    negative-infinity > neg-inf-as-bytes!

    [num] > is-nan
      num.eq nan.as-bytes > @
    if. > @
      or.
        is-nan value
        value.eq neg-inf-as-bytes
      nan
      positive-infinity

  # Difference between $ and x.
  [x] > minus
    x > value!
    positive-infinity > pos-inf-as-bytes!

    [num] > is-nan
      num.eq nan.as-bytes > @
    if. > @
      or.
        is-nan value
        value.eq pos-inf-as-bytes
      nan
      positive-infinity

  # Quotient of the division of $ by x.
  [x] > div
    x > value!

    [num] > is-nan
      num.eq nan.as-bytes > @

    [num] > is-nan-or-infinite
      or. > @
        or.
          is-nan num
          num.eq positive-infinity
        num.eq negative-infinity

    [num] > is-num-gte-zero
      try > @
        0.lte num
        0.0.lte ^.num > [e] >>
        false
    if. > @
      is-nan-or-infinite value
      nan
      if.
        is-num-gte-zero value
        positive-infinity
        negative-infinity
