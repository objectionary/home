+package org.eolang.math
+home https://github.com/objectionary/eo-math
+version 0.1.3
+rt jvm org.eolang:eo-math:0.1.3

# Not a number
[] > nan
  # Tests that $ = x
  [x] > eq
    FALSE > @

  # Tests that $ â‰  x
  [x] > neq
    TRUE > @

  # Tests that $ < x
  [x] > lt
    FALSE > @

  # Tests that $ â‰¤ x
  [x] > lte
    FALSE > @

  # Tests that $ > x
  [x] > gt
    FALSE > @

  # Tests that $ â‰¥ x
  [x] > gte
    FALSE > @

  # Multiplication of $ and x
  [x] > times
    ^ > @

  # Sum of $ and x
  [x] > plus
    ^ > @

  # Negation of $
  [] > neg
    ^ > @

  # Sign of $ (-1.0, 0.0, or 1.0)
  [] > signum
    ^ > @

  # Difference between $ and x
  [x] > minus
    ^ > @

  # x'th power of $
  [x] > pow
    ^ > @

  # Quotient of the division of $ by x
  [x] > div
    ^ > @

  # Absolute value of $ (i.e., with no sign)
  [] > abs
    ^ > @

  # Converts this to bytes
  [] > as-bytes
    7F-C0-00-00 > @

  # Converts this to int
  [] > as-int
    [] > @
      "You can't convert NaN to int" > msg

  # Converts this to string
  [] > as-string
    "NaN" > @
