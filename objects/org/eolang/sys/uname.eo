+architect yegor256@gmail.com
+home https://github.com/objectionary/eo-sys
+package org.eolang.sys
+rt jvm org.eolang:eo-sys:jar-with-dependencies:0.0.8
+version 0.0.8

# Represents information about operating system.
# See https://man7.org/linux/man-pages/man2/uname.2.html
[] > uname
  [] > @ /string

  # TRUE if it's Windows
  [] > is-windows
    contains. > @
      QQ.txt.text
        low-cased.
          QQ.txt.text ^
      "windows"

  # TRUE if it's Unix
  [] > is-unix
    contains. > @
      QQ.txt.text
        low-cased.
          QQ.txt.text ^
      "linux"

  # TRUE if it's MacOS
  [] > is-macos
    contains. > @
      QQ.txt.text
        low-cased.
          QQ.txt.text ^
      "mac"
